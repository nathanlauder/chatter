{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "no-console": "warn",
      "quotes": ["error", "single",
          {
            "allowTemplateLiterals": true
          }
      ],
      "no-underscore-dangle": ["error", {
        "allow": ["_id", "__v"]
      }],
      "operator-linebreak": ["error", "after"],
      "indent": ["error", 2],
      "comma-dangle": ["error", "never"],
      "eol-last": ["error", "never"]
    }
}
